<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    tools:context=".OTPverification">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_310sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-60dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/forgotpasswordbg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/poppinsregular"
                    android:text="OTP Verification"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_18sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Enter OTP"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp"/>


                <TextView
                    android:id="@+id/tvotpEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Please enter the number code send your xxx@company.com"
                    android:textAlignment="center"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_45sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/otp1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_55sdp"
                        android:background="@drawable/ic_rectangle"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:textColor="#FFFF"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:maxLength="1"
                        android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/otp2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_55sdp"
                        android:background="@drawable/ic_rectangle"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:textColor="#FFFF"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:inputType="number"
                        android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/otp3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_55sdp"
                        android:background="@drawable/ic_rectangle"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:textColor="#FFFF"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:maxLength="1"
                        android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/otp4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_55sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:background="@drawable/ic_rectangle"
                        android:textColor="#FFFF"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:maxLength="1"
                        android:layout_weight="1"/>

                </LinearLayout>


                <TextView
                    android:id="@+id/btnResendOtp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Resend OTP"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_11sdp"/>



                <LinearLayout
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:background="@drawable/rectanglebuttonbg"
                    android:layout_marginLeft="@dimen/_35sdp"
                    android:layout_marginRight="@dimen/_35sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="SUBMIT"
                        android:gravity="center"
                        android:fontFamily="@font/poppinsregular"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginTop="-42dp"
                        android:textAllCaps="true"/>

                </LinearLayout>





            </LinearLayout>



        </ScrollView>



    </LinearLayout>


</RelativeLayout>


</layout>