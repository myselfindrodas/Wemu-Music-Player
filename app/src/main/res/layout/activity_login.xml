<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    tools:context=".Login">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/black"
        android:layout_marginBottom="-50dp"
        app:cardCornerRadius="@dimen/_58sdp">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_40sdp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/loginblurbg">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Login"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_18sdp"/>

                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:backgroundTint="@android:color/white"
                    android:drawableLeft="@drawable/ic_mail"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="#FFFF"
                    android:hint="Email"
                    android:textSize="@dimen/_12sdp"
                    android:inputType="textEmailAddress"
                    android:textColorHint="#FFFF" />




                <RelativeLayout
                    android:id="@+id/countryTxtLL"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    >

                    <ImageView
                        android:id="@+id/img_ic_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@drawable/ic_password" />

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_toRightOf="@+id/img_ic_password"
                        android:background="@null"
                        android:fontFamily="@font/poppinsregular"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:textColor="#FFFF"
                        android:textColorHint="#FFFF"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/pwdHideBtn"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/eye_white" />



                </RelativeLayout>
                <View
                    android:layout_below="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_30sdp"/>




                <TextView
                    android:id="@+id/btnForgotpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Forgot Password?"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textColor="@color/textyellow"
                    android:textSize="@dimen/_12sdp"/>


                <LinearLayout
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectanglebuttonbg"
                    android:layout_marginLeft="@dimen/_35sdp"
                    android:layout_marginRight="@dimen/_35sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Login"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:fontFamily="@font/poppinsregular"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginTop="-42dp"
                        android:textAllCaps="true"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-30dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Donâ€™t have an account? "
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/white"/>


                    <TextView
                        android:id="@+id/btnSignup"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Sign Up"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/poppinsregular"
                        android:textStyle="bold"
                        android:textColor="@color/textyellow"/>



                </LinearLayout>





            </LinearLayout>


        </ScrollView>




    </androidx.cardview.widget.CardView>

</RelativeLayout>

</layout>